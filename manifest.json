{
    "manifest_version": 2,
    "name": "Site Blocker",
    "description": "Blocks access to time-consuming websites/distractions (based on your specification) to improve your productivity.",
    "version": "1.0",
    "options_page": "options.html",
    "permissions": [
        "storage",
        "tabs"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "icons": {
        "128": "logo.png",
        "64": "logo_64.png",
        "48": "logo_48.png"
    }
}